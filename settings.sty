% required packages
\usepackage[compact]{titlesec}
\usepackage[utf8]{inputenc}
\usepackage{tabularray}
\usepackage{listings}
\usepackage{multicol}
\usepackage{textcomp}
\usepackage{geometry}
\usepackage{enumitem}
\usepackage{color}

% page geometry
\geometry{left=2cm,right=2cm,bottom=2cm,top=2cm}
% columns spacing
\setlength{\columnsep}{2em}
% tighter titles, sections, etc.
\titlespacing{\section}{0pt}{1em}{0.5em}
\titlespacing{\subsection}{0pt}{1em}{0.5em}
\titlespacing{\subsubsection}{0pt}{1em}{0.5em}
\titlespacing{\paragraph}{0pt}{1em}{0.5em}
% changed bullet for lists
\renewcommand\labelitemi{\small\bfseries\texttt{>}}
\renewcommand\labelitemii{\small\bfseries\texttt{-}}
% tighter lists
\setlist[itemize]{noitemsep, after=\vspace{0.25em}, before=\vspace{0.25em}}
\setlist[enumerate]{noitemsep, after=\vspace{0.25em}, before=\vspace{0.25em}}
% tighter lstlisting
\lstdefinestyle{tight}{
  xleftmargin=1em,
  xrightmargin=1em,
  aboveskip=0em,
  belowskip=0.5em,
  backgroundcolor=\color[rgb]{0.95,0.95,0.95},
}
% lstlisting default style
\lstset{style=tight}
% racket language, based on ttps://github.com/stuhlmueller/scheme-listings
\lstdefinelanguage{Racket}{
  morekeywords={add1, ake, and, append, apply, begin, call-with-current-continuation, call-with-input-file, call-with-output-file, call/cc, car, case, cdr, cond, cons, count, define, define-macro, define-stream, define-syntax, delay, display, displayln, do, drop, else, environment, eq?, equal?, eqv?, eval, even?, exp, export, expt, filter, first, fold, foldl, foldr, for, for-each, force, gcd, hash, hash-has-key?, hash-ref, hash-remove, hash-set, if, implies, import, in-hash, in-list, in-range, in-set, in-string, in-vector, lambda, last, lcm, length, let, let*, let*-values, let-syntax, let-values, letrec, letrec-syntax, list, list->set, list->string, list-ref, list-tail, log, map, match, max, min, negative?, newline, not, odd?, or, positive?, print, printf, println, quasiquote, query, quote, quotient, remainder, rest, reverse, set, set-add, set-member?, set-remove, stream-lambda, string->list, string-append, string-length, string-ref, struct, sub1, syntax, syntax-rules, take, true?, unless, unquote, unquote-splicing, vector-ref, when, xor, zero?},
  alsodigit=!\$\%&*+-./:<=>?@^_~,
  alsoletter=!?>,
  sensitive=true,
  morecomment=[l]{;},
  morecomment=[s]{\#|}{|\#},
  morestring=[b]",
  basicstyle=\small\ttfamily,
  keywordstyle=\bf\ttfamily\color[rgb]{0,.3,.7},
  commentstyle=\color[rgb]{0.133,0.545,0.133},
  stringstyle={\color[rgb]{0.75,0.49,0.07}},
  upquote=true,
  breaklines=true,
  breakatwhitespace=true,
  literate=*{`}{{`}}{1},
  showstringspaces=false,
  mathescape=true,
}
% command to switch column
\newcommand{\switchcolumn}{\vspace*{\fill}\columnbreak}
